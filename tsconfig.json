{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["dom", "dom.iterable", "es2022"],
      "allowJs": false,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [{ "name": "next" }],
      "esModuleInterop": true,
  
      "baseUrl": ".",                // ✅ add this
      "paths": {                     // ✅ and this
        "@/*": ["./*"]
      }
    },
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
  }
  